# TrainingLoad Production Environment Configuration
# Copy this to .env.production and update with your actual values

# === Database Configuration ===
# Cloud SQL PostgreSQL connection string
# Format: postgresql://username:password@/database?host=/cloudsql/project:region:instance
DATABASE_URL=postgresql://trainload:YOUR_PASSWORD@/trainload?host=/cloudsql/YOUR_PROJECT:YOUR_REGION:YOUR_INSTANCE

# === Strava API Configuration ===
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here
STRAVA_REDIRECT_URI=https://YOUR_APP_URL.appspot.com/auth/strava/callback

# === Intervals.icu Configuration (Optional) ===
INTERVALS_ICU_BASE_URL=https://intervals.icu/api/v1

# === Application Configuration ===
ENVIRONMENT=production
SECRET_KEY=your_secret_key_for_jwt_here
CORS_ORIGINS=https://YOUR_APP_URL.appspot.com

# === Logging Configuration ===
LOG_LEVEL=INFO

# === Background Job Configuration ===
SCHEDULER_DATABASE_URL=sqlite:///scheduler_jobs.sqlite

# === Security Configuration ===
ALLOWED_HOSTS=YOUR_APP_URL.appspot.com
SECURE_COOKIES=true
